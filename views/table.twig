{% extends "index.twig" %}

{% block body %}

<div class="table-responsive">
  <table class="table table-striped table-bordered table-sm table-light ">
    <thead>
      <tr>
        <th scope="col">Article</th>
        
        <th scope="col">cut</th>
        
        <th scope="col">description</th>
        
        <th scope="col">number of tests</th>
      </tr>
    </thead>
    <tbody>


    {% for article in articles %}
      <tr>
        <td><img src="/images/Clothing Stock/{{article.categorie}}/{{article.image}}" class="ui mini rounded image"> </td>
        <td>{{article.taille}}</td>
        
        <td>{{article.desc}}</td>
        <td>{{article.scanne.length}}</td>


                

      </tr>
      </tbody>
{% endfor %}

  </table>
</div>       
{% endblock %}




